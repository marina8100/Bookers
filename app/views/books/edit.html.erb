<h1>Editing Book</h1>
 <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

 <div>
  <p>Title</p>
  <%= f.text_field :title %>
 </div>

 <div>
  <p>Body</p>
  <%= f.text_area :body %>
 </div>

<%= f.submit 'Update Book' %>

 <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back",books_path %>
 </div>
<% end %>