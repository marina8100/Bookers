<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

 <div>
  <p>Title</p>
  <%= f.text_field :title %>
 </div>

 <div>
  <p>Body</p>
  <%= f.text_area :body %>
 </div>

<%= f.submit 'Update Book' %>

 <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back",books_path(@book.id) %>
 </div>
<% end %>