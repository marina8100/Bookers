<html>
 <h2>Books</h2>
 <% @books.each do |book| %>
 <table>
  <header>
    <div>
      <th>Title</th>
       <%= book.title %>
       <span><%= book.body %></span>
      <th>Body</th>
      <th colspan="3"></th>
      
       <% end %>
    </div>
  </header>
</table>


<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model:@new_book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
